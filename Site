    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .container {
    background: rgba(0, 0, 0, 0.6);
    padding: 40px;
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 0 30px rgba(0, 255, 200, 0.4);
    width: 400px;
  }

  h1 {
    margin-bottom: 20px;
    color: #00ffc8;
  }

  input {
    width: 80%;
    padding: 10px;
    border-radius: 8px;
    border: none;
    margin-bottom: 15px;
  }

 <button onclick="showGames()">Play Games</button>

<div id="games" style="display:none; margin-top:20px;">
  <button onclick="loadGame('snake')">üêç Snake</button>
  <button onclick="loadGame('tictactoe')">‚ùå Tic Tac Toe</button>
  <div id="gameArea" style="margin-top:20px;"></div>
</div>


  button:hover {
    background-color: #00bfa6;
    transform: scale(1.05);
  }
</style>
<script>
function showGames() {
  document.getElementById("games").style.display = "block";
}

function loadGame(game) {
  const gameArea = document.getElementById("gameArea");
  gameArea.innerHTML = "";

  if (game === "snake") {
    gameArea.innerHTML = `
      <iframe src="https://playsnake.org/" 
        width="600" height="400" 
        style="border:none; border-radius:10px;">
      </iframe>
    `;
  }

  if (game === "tictactoe") {
    gameArea.innerHTML = `
      <iframe src="https://playtictactoe.org/" 
        width="400" height="400" 
        style="border:none; border-radius:10px;">
      </iframe>
    `;
  }
}
</script>


