<script>

// --- BRICKS SYSTEM ---
if (!localStorage.getItem("bricks")) {
  localStorage.setItem("bricks", 100);
}

function updateBricks() {
  document.getElementById("brickCount").textContent =
    localStorage.getItem("bricks") + " Bricks";
}

function earnBricks() {
  let current = parseInt(localStorage.getItem("bricks"));
  current += 25;
  localStorage.setItem("bricks", current);
  updateBricks();
}

updateBricks();

// --- GAMES ---
const games = [
  {name: "Classic Obby", creator: "Admin"},
  {name: "Brick Battle", creator: "BuilderX"},
  {name: "Speed Run 2026", creator: "NoobKing"}
];

const gameContainer = document.getElementById("games");

games.forEach(game => {
  const div = document.createElement("div");
  div.className = "box";
  div.innerHTML = `
    <b>${game.name}</b><br>
    By ${game.creator}<br>
    <button class="button" onclick="alert('Loading ${game.name}...')">
      Play
    </button>
  `;
  gameContainer.appendChild(div);
});

// --- PLAYERS ---
const players = [
  {name: "Admin", bricks: 9999},
  {name: "BuilderX", bricks: 1200},
  {name: "NoobKing", bricks: 500}
];

const playerList = document.getElementById("players");

players.forEach(player => {
  const li = document.createElement("li");
  li.textContent = `${player.name} - ðŸ§± ${player.bricks} Bricks`;
  playerList.appendChild(li);
});

</script>

